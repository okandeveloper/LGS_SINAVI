<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F2F4F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Başlık Kartı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical"
            android:elevation="4dp"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:clipToOutline="true"
            android:backgroundTint="#FFFFFF"
            android:shape="rectangle"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LGS Çalışma Odası"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"/>
        </LinearLayout>


        <!-- DERS SEÇİM KARTI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:elevation="4dp"
            android:clipToOutline="true"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FFFFFF"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hangi Dersi Çalışacaksın?"
                android:textColor="#444444"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinnerDersler"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_spinner"/>
        </LinearLayout>


        <!-- KONU SEÇİM KARTI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:elevation="4dp"
            android:clipToOutline="true"
            android:backgroundTint="#FFFFFF"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hangi Konu?"
                android:textColor="#444444"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinnerKonular"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_spinner"/>
        </LinearLayout>


        <!-- BUTON -->
        <Button
            android:id="@+id/btnVideolariGetir"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Ders Videolarını Listele"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF3B30"
            android:fontFamily="sans-serif-medium"
            android:elevation="6dp"/>

    </LinearLayout>

</ScrollView>
