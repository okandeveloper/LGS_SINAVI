<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="@color/progressBackground"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/progressBackground" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pomodoro Ayarları"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/primaryText" />

    <!-- Hazır süre butonları -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btnPreset15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="15 dk" />

        <Button
            android:id="@+id/btnPreset25"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="25 dk"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/btnPreset40"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="40 dk"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/btnPreset60"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="60 dk"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Manuel süre ve mola ayarları -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Çalışma (dk)"
                android:textColor="@color/secondaryText"/>

            <EditText
                android:id="@+id/etWorkMinutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:hint="25" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kısa mola (dk)"
                android:textColor="@color/secondaryText"/>

            <EditText
                android:id="@+id/etShortBreak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:hint="5" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uzun mola (dk)"
                android:textColor="@color/secondaryText"/>

            <EditText
                android:id="@+id/etLongBreak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:hint="15" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uzun molaya kaç çalışma?"
                android:textColor="@color/secondaryText"/>

            <EditText
                android:id="@+id/etCycleCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:hint="4" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnApplySettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uygula"
        android:layout_marginTop="16dp"/>
</LinearLayout>
